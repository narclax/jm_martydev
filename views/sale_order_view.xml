<odoo>
    <record id="view_order_form_inherit_custom_po" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.po</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="after">
                <field name="custom_po" />
            </xpath>
        </field>
    </record>
</odoo>