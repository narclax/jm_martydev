<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="gad_report_custom_invoice">
            <t t-call="web.html_container">    
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <t t-set="print_with_payments" t-value="True"/>
                <t t-set="company" t-value="doc.company_id"/>
                <t t-call="jm_gad_documents.gad_custom_external_layout">
                    <div class="page" style="min-height:850px;">
                        <div class="oe_structure"/>
                        <style>

                            @font-face {
                                font-family: 'LatoBlack';
                                src: url('/jm_caperucita_reports/static/src/fonts/Lato-Bold.ttf') format('truetype');

                            }
                            @font-face {
                                font-family: 'LatoLight';
                                src: url('/jm_caperucita_reports/static/src/fonts/Lato-Light.ttf') format('truetype');

                            }

                            .tblack {
                                font-family: 'Lato', sans-serif!important;
                                color:#040404!important;
                                font-weight: 300;
                                font-style: normal;
                            }
                            
                            * {
                                font-family: 'Lato'!important;
                                color:#040404!important;
                                font-weight: 100;
                                font-style: normal;
                            }

                    
                            
                        </style>
                        

                        <div class="row mb-4 mt-2" style="margin-top:-20px;">
                            <div class="row">
                                <div class="col-4">
                                    <strong style="font-size:22px;" t-esc="doc.company_id.name"/>
                                    <img class="" width="275" height="auto" alt="logo" align="left" t-attf-src="data:image/png;base64, #{company.logo}"/>
                                    <br/>
                                    
                                    <span class="tblack" style="color:#000;font-size: 36px;font-weight:300;" t-if="doc.move_type == 'out_invoice' and doc.state == 'posted'">Factura</span>
                                    <span class="tblack" style="color:#000;font-size: 36px;font-weight:300;" t-if="doc.move_type == 'out_invoice' and doc.state == 'draft'">Borrador de Factura</span>
                                    <span class="tblack" style="color:#000;font-size: 36px;font-weight:300;" t-if="doc.move_type == 'out_invoice' and doc.state == 'cancel'">Factura Cancelada</span>
                                    <span class="tblack" style="color:#000;font-size: 36px;font-weight:300;" t-if="doc.move_type == 'out_refund'">Nota de Crédito</span>
                                    <span class="tblack" style="color:#000;font-size: 28px;font-weight:300;" t-if="doc.move_type == 'in_refund'">Nota de Crédito al Vendedor</span>
                                    <span class="tblack" style="color:#000;font-size: 28px;font-weight:300;" t-if="doc.move_type == 'in_invoice'">Factura al Vendedor</span><br/>
                                    <div t-if="doc.l10n_latam_use_documents" style="text-transform:capitalize;">Crédito Fiscal</div>



                                    <span class="tblack" style="font-size: 22px;font-weight:300;" t-esc="doc.name"/>
                                </div>



                                <div class="col-4 text-right" style="text-align:right;padding-right:15px;padding-top:50px">
                                    <p>
                                        <strong class="tblack">Fecha: </strong><t t-esc="doc.invoice_date" t-options="{'widget': 'date'}"/><br/>
                                        <!--
                                        <t t-if="doc.validity_date">
                                            <strong class="tblack">Valid Thru: </strong><t t-esc="doc.validity_date" t-options="{'widget': 'date'}"/><br/>
                                        </t>
                                        -->
                                        <strong class="tblack">Creado por: </strong><t t-esc="doc.user_id.name"/>
                                    </p>                                    
                                </div>
                                <div class="col-4" style="padding-left:15px;">


                                    <span style="font-weight:100;margin-bottom:5px;"><t t-esc="doc.company_id.name"/></span><br/>
                                    <span><t t-esc="doc.company_id.street"/></span><br/>
                                    <span><t t-esc="doc.company_id.street2"/></span><br/>
                                    <span><t t-esc="doc.company_id.state_id.name"/>, <t t-esc="doc.company_id.country_id.name"/>
                                    </span><br/>
                                    <span>Tel: <t t-esc="doc.company_id.phone"/></span><br/>
                                    <span>Email: <t t-esc="doc.company_id.email"/></span><br/>
                                    <span>URL: <t t-esc="doc.company_id.website"/></span><br/>
                                    <span>RNC: <t t-esc="doc.company_id.vat"/></span>
                                    
                                    
                                    


                                    
                                </div>
                            </div>
                        </div>




                        <hr style="height: 2px;background: #d12c2a;border: 0;"/>

                        <div class="row mb-4 mt-2" style="border:2px solid:red!important;">
                            <div class="col-8">
                                <p class="tblack">
                                    Cliente: <t t-esc="doc.partner_id.name"/><br/>
                                    Dirección: <t t-esc="doc.partner_id.street"/>, <t t-esc="doc.partner_id.street2"/><br/>
                                    RNC: <t t-esc="doc.partner_id.vat"/><br/>
                                    Contacto: <t t-esc="doc.partner_id.phone"/>
                            </p>
                            </div>

                            <div class="col-4" style="padding-left:10px;">
                                <p style="" class="tblack">
                                    <t t-if="doc.custom_po">
                                        Orden de Compra: <t t-esc="doc.custom_po"/><br/>
                                    </t>
                                        No. Factura: <t t-esc="doc.name"/><br/>
                                    <span class="tblack" t-if="doc.l10n_latam_use_documents">
                                        NFC: <t t-esc="doc.l10n_do_fiscal_number"/><br/>
                                        Válido hasta: <t t-esc="doc.l10n_do_ncf_expiration_date"/><br/>
                                    </span>
                                    <span class="tblack" t-if="doc.purchase_order_id">
                                        Orden de Compra: <t t-esc="doc.purchase_order_id.name"/>
                                    </span>
                                </p>
                            </div>
                        </div>

                        <hr style="height: 2px;background: #d12c2a;border: 0;"/>

                        

                        
                        
                        <t t-set="display_discount" t-value="any(l.discount for l in doc.invoice_line_ids)"/>

                        
                        
                        <table class="mt-4 table">
                            <tr class="tblack">
                                <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">Cant.</td>
                                <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">Descripción</td>
                                <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">Precio Unitario</td>
                                <td style="background:#d12c2a;text-align:center;color:#fff!important;" name="th_discount" t-if="display_discount" class="tblack text-center" groups="product.group_discount_per_so_line">
                                    Desc.%
                                </td>
                                <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">ITBIS</td>
                                <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">Importe</td>
                            </tr>                            
                            

                            <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="lines" t-value="doc.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="lines" t-as="line">


                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>






                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td class="text-center" style="vertical-align: middle;">
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                            </td>
                                            <!--
                                            <td style="vertical-align: middle;" name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                            -->
                                            <td style="vertical-align: middle;" name="account_invoice_line_name">
                                                <t t-if="line.product_id.description_sale">
                                                    <span t-field="line.product_id.description_sale" t-options="{'widget': 'text'}"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                                                </t>
                                                
                                            </td>
                                            
                                            <td style="vertical-align: middle;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit"/>
                                            </td>
                                            <td style="vertical-align: middle;" t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount"/>
                                            </td>
                                            <td style="vertical-align: middle;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                            </td>
                                            <td style="vertical-align: middle;" class="text-end o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td style="vertical-align: middle;" colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td style="vertical-align: middle;" colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-end">
                                            <td style="vertical-align: middle;" colspan="99">
                                                <span class="mr16">Subtotal</span>
                                                <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>




                        </table>


                        

                       
                        <style>
                            table[name="invoice_snln_table"] {
                                font-size: 14px;
                            }
                        </style>
                        <div class="row" style="page-break-inside:avoid;break-inside:avoid">
                                <div class="col-7 text-left">
                                  
                                  
                                    <t groups="stock_account.group_lot_on_invoice">
                                      <t t-set="lot_values" t-value="doc._get_invoiced_lot_values()"/>
                                      <t t-if="lot_values">
                                          <br/>
                                          <table class="table" name="invoice_snln_table">
                                              
                                                  <tr>
                                                      <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">
                                                        Producto
                                                      </td>
                                                      <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">
                                                        Cant.
                                                        </td>
                                                      <td class="tblack" style="background:#d12c2a;text-align:center;color:#fff!important;">
                                                        SN/LN
                                                      </td>
                                                  </tr>
                                              
                                              
                                                  <t t-foreach="lot_values" t-as="snln_line">
                                                      <tr>
                                                          <td><t t-esc="snln_line['product_name']"/></td>
                                                          <td class="text-end">
                                                              <t t-esc="snln_line['quantity']"/><br/>
                                                              <t t-esc="snln_line['uom_name']" groups="uom.group_uom"/>
                                                          </td>
                                                          <td class="text-end"><t t-esc="snln_line['lot_name']"/></td>
                                                      </tr>
                                                  </t>
                                          </table>
                                      </t>
                                    </t>
                                  
                                  
                                  
                                  
                                  
                                  
                                    
                                    <t t-if="doc.invoice_payment_term_id">
                                        <div t-field="doc.invoice_payment_term_id.note"/>
                                    </t>
                                    
                                    
                                </div>
                                
                                <div class="col-5" style="padding-left:25px;">
                                    <!-- Tax totals -->
                                    <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                    

                                    <table class="table" width="100%;">
                                        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                            <tr>
                                                <td style="">
                                                    <span t-esc="subtotal['name']"/>
                                                    <span t-esc="subtotal['formatted_amount']" style="float:right;"/>
                                                </td>
                                            </tr>

                                            

                                            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                            

                                            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                                <tr>
                                                    <t t-if="tax_totals['display_tax_base']">
                                                        <td style="">
                                                            <span t-esc="amount_by_group['tax_group_name']"/>
                                                            <span class="text-nowrap"> on
                                                                <t t-esc="amount_by_group['formatted_tax_group_base_amount']"/>
                                                            </span>
                                                            <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" style="float:right;"/>
                                                        </td>
                                                        
                                                            
                                                        
                                                    </t>
                                                    <t t-else="">
                                                        <td style="">
                                                            <span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/>
                                                            <span style="float:right;" class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>


                                        <t t-set="has_rounding" t-value="'formatted_amount_total_rounded' in tax_totals"/>
                                        <!--Total amount with all taxes-->
                                        
                                        <tr class="">
                                            <t t-if="has_rounding">

                                                <td style="" class="tblack">
                                                    Total
                                                    <span class="tblack" t-esc="tax_totals['formatted_amount_total']" style="float:right;"/> 
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td style="" class="tblack">
                                                    Total
                                                    <span class="tblack" t-esc="tax_totals['formatted_amount_total']" style="float:right;"/> 
                                                </td>
                                            </t>
                                                                                       
                                        </tr>
                                         
                                        <tr t-if="has_rounding">
                                            <td style="">
                                                Total Redondeado
                                                <span class="tblack" t-esc="tax_totals['formatted_amount_total_rounded']" style="float:right;"/>
                                            </td>
                                        </tr>


                                        <!--Payments-->
                                        <t t-if="print_with_payments">
                                            <t t-if="doc.payment_state != 'invoicing_legacy'">
                                                <t t-set="payments_vals" t-value="doc.sudo().invoice_payments_widget and doc.sudo().invoice_payments_widget['content'] or []"/>
                                                <t t-foreach="payments_vals" t-as="payment_vals">
                                                    
                                                    <tr t-if="payment_vals['is_exchange'] == 0">
                                                        <td style="">
                                                            <i class="oe_form_field text-end oe_payment_label">Pagado en <t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></i>
                                                            <span style="float:right;" t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                                        </td>                                                        
                                                    </tr>
                                                </t>
                                                <t t-if="len(payments_vals) &gt; 0">
                                                    
                                                    <tr class="border-black">
                                                        <td style="">Monto Pendiente
                                                            <span style="float:right;" t-field="doc.amount_residual"/>
                                                        </td>
                                                    </tr>
                                                    </t>
                                                </t>
                                            </t>
                                    </table>                                    
                                </div>
                            </div>
                        
                      
                        <div class="row" style="margin-top:30px">
                            <div class="col-6 text-center" style="padding-left:25px;padding-right:25px;padding-top:40px;">
                                <hr style="height;2px"/>
                                <br/>Preparada Por
                            </div>
                            <div class="col-6 text-center" style="padding-left:25px;padding-right:25px;padding-top:40px;">
                                <hr style="height;2px"/>
                                <br/>Recibido Por
                            </div>
                        </div>   
                        <div class="row" style="margin-top:10px">
                            <div class="col-6 text-center" style="padding-left:25px;padding-right:25px;padding-top:40px;">
                                <hr style="height;2px"/>
                                <br/>Autorizado Por
                            </div>
                            <div class="col-6 text-center" style="padding-left:25px;padding-right:25px;padding-top:40px;">
                                <hr style="height;2px"/>
                                <br/>Entregada Por
                            </div>
                        </div>   
                    </div>
                </t>
            </t>
        </template>

        <template id="report_custom_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="jm_gad_documents.gad_report_custom_invoice" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
